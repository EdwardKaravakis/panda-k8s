#!/bin/bash

# gererate fake VOMS proxy
while true; do voms-proxy-fake -rfc -voms sphenix -out /data/harvester/sphenix.proxy -hours 96 -cert=/data/harvester/usercert.pem -key=/data/harvester/userkey.pem -hostcert /opt/harvester/etc/cert/hcvoms.sdcc.bnl.gov.crt -hostkey /opt/harvester/etc/cert/hcvoms.sdcc.bnl.gov-key.pem -fqan "/sphenix/Role=pilot/Capability=NULL" -uri hcvoms.sdcc.bnl.gov:15001 > /var/log/panda/proxy.log 2>&1; sleep 3600; done &
